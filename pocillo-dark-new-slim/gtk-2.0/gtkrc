# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#d3dae3\nbase_color:#2d3039"
# Foreground/background
gtk-color-scheme = "fg_color:#d3dae3\nbg_color:#2d3039"
# Selected foreground/background
gtk-color-scheme = "selected_fg_color:#d3dae3\nselected_bg_color:#8AB4F8"
# Titlebar foreground/background
gtk-color-scheme = "titlebar_fg_color:#d3dae3\ntitlebar_bg_color:#25272e"
# Menus
gtk-color-scheme = "menu_color:#2d3039"
# Tooltips foreground/background
gtk-color-scheme = "tooltip_fg_color:#d3dae3\ntooltip_bg_color:#616161"
# Links
gtk-color-scheme = "link_color:#8AB4F8\nvisited_link_color:#CE93D8"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
